 <% if (errors.length > 0) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-lg mb-6 relative" role="alert">
            <strong class="font-bold">Error!</strong>
            <ul class="list-disc list-inside mt-2">
              <% errors.forEach(error => { %>
                <li><%= error %></li>
              <% }) %>
            </ul>
            <span class="absolute top-2 right-4 text-xl cursor-pointer" onclick="this.parentElement.style.display='none'">&times;</span>
          </div>
        <% } %>