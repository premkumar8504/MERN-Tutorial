<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-24 p-10 bg-white rounded-3xl shadow-2xl max-w-md">
      <h1 class="text-3xl font-extrabold mb-10 text-center text-gray-800 tracking-tight">Login with your info</h1>
      <form action="/login" method="POST" class="space-y-7">
        <%- include('../partials/errors') %>
        <input  
          type="email"
          name="email"
          placeholder="Enter your Email"
          value="<%= oldInput.email ? oldInput.email : '' %>"
          class="w-full px-6 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
          required />
        <input
          type="password"
          name="password"
          placeholder="Enter Your Password"
          class="w-full px-6 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
          required />
        <input type="submit" value="Sign In" class="w-full bg-red-500 text-white py-3 rounded-lg font-bold hover:bg-red-600 transition duration-300 shadow-lg" />
      </form>
    </main>
  </body>
</html>